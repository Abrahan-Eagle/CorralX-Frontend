# =====================================

# API URLs
API_URL_LOCAL=http://192.168.27.7:8000
API_URL_PROD=https://backend.corralx.com

# WebSocket Configuration - Laravel Echo Server
WS_URL_LOCAL=ws://192.168.27.7:6001
WS_URL_PROD=wss://backend.corralx.com

# Echo Server Configuration
ECHO_APP_ID=corralx-app
ECHO_KEY=corralx-key
ENABLE_WEBSOCKETS=true

# Google Maps API Key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# App Configuration
APP_NAME=Corral X
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Timeout Configuration (in milliseconds)
CONNECTION_TIMEOUT=30000
RECEIVE_TIMEOUT=30000
REQUEST_TIMEOUT=30000

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Environment
ENVIRONMENT=development
