# ====================================
# CORRAL X - FRONTEND CONFIGURATION
# ====================================

# Environment
ENVIRONMENT=development

# Backend API URLs
API_URL_LOCAL=http://192.168.27.12:8000
API_URL_PROD=https://backend.corralx.com

# WebSocket URLs
WS_URL_LOCAL=ws://192.168.27.12:6001
WS_URL_PROD=wss://backend.corralx.com

# App Information
APP_NAME=Corral X
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Timeout Configuration (milliseconds)
CONNECTION_TIMEOUT=30000
RECEIVE_TIMEOUT=30000
REQUEST_TIMEOUT=30000

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Echo/Broadcasting Configuration
ECHO_APP_ID=corralx-app
ECHO_KEY=corralx-key
ENABLE_WEBSOCKETS=true

# Debug Mode
DEBUG_MODE=true
ENABLE_LOGGING=true
